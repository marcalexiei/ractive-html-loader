{
  "root": true,
  "ignorePatterns": ["dist/**"],
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "indent": ["error", 2],
    "max-len": [
      "error",
      120,
      {
        "ignoreStrings": true
      }
    ],
    "no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true
      }
    ],
    "func-names": ["error", "as-needed"],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "no-cond-assign": ["error", "except-parens"]
  }
}
